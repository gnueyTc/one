<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_date"
        android:text="4月21日"
        android:textSize="@dimen/one_text_mini_size"
        android:textColor="@color/colorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView

        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/iv_buble_share"
        android:id="@+id/iv_bubble_like"
        android:layout_gravity="right"
        android:src="@drawable/bubble_like"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <ImageView
        android:id="@+id/iv_buble_share"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="right"
        android:layout_gravity="end"
        android:src="@drawable/bubble_share"
        android:layout_width="15dp"
        android:layout_height="15dp" />
</RelativeLayout>